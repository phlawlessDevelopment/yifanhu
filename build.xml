<project name="yifanhu" default="jar" basedir=".">
    <target name="clean">
        <delete dir="build"></delete>
    </target>
    <target name="compile">
        <mkdir dir="build"/>
        <javac target="1.8" source="1.8" srcdir="src" destdir="build" classpath="lib/gephi-toolkit-0.9.2-all.jar"/>
    </target>
    <target name="jar" depends="clean, compile">
        <mkdir dir="dist"/>
        <jar destfile="dist/yifanhu.jar"
             basedir="build"/>
    </target>
</project>


